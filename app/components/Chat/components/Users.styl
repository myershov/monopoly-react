.users-main
  width 283px
  height 800px
  background-color grey
  .users-header
    display flex
    height 60px
    flex-direction row
    border-bottom solid 1px black
    .my-icon
      height 45px
      width 45px
      border-radius 50%
      background-color black
      margin-top 7px
      margin-left 10px
    .text
      margin-top 18px
      padding-left 12px
      font-family Helvetica Neue, Helvetica Arial, sans-serif
      font-size 15px
      color black
   .users-body
     display flex
     flex-direction row
     .counter
       font-family Helvetica Neue, Helvetica Arial, sans-serif
       color black
       margin-left 10px
       margin-top 7px
       font-size 15px
     ul
       list-style-type none
       padding 0px
       width 283px
     li
       height 45px
       width 45px
       border-radius 50%
       background-color black
       margin-left 10px
       margin-top 7px
       margin-bottom 7px
     a
       display inline-flex
       color black
       padding-left 59px
       margin-top 12px
       margin-bottom 12px
       white-space nowrap
       font-family Helvetica Neue, Helvetica Arial, sans-serif
       font-size 15px
