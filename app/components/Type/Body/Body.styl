.monopoly-app
    height calc(100vh - 56px)

	.monopoly-logo
		width 100%
		position relative
		display flex
		align-items center
		align-content center
		justify-content center
		margin-bottom 50px
		.monopoly-logo-inner
			margin-top 75px
			width 50%
			min-width 90px
			max-width 330px
			img
				display block
				max-width 100%
				border none

.monopoly-game-selection
  background-color #fff
  color #000
  width 50%
  height 80px
  margin auto
  padding-top 28px
  font-size 100%
  border-radius 5px
  font-weight bold
  text-align:  center;
  .selection-game
    width 33%
    float left
  .selection-money
    width 34%
    float left
  .selection-dashboard
    width 33%
    float right
