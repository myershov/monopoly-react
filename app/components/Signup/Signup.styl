btn-color = #636363
btn-hover = #81bcde


.form__login
  height 100vh
  display flex
  justify-content center
  align-items center

  form 
    width 56rem
    text-align center

  .extended__logo
    position relative 
    z-index 2

.form__wrap
  background-color #FFFFFF
  margin-top -1rem
  padding 5rem 4.5rem 3rem 7.5rem
  position relative

  .form__body
    display flex
    flex-direction column
    align-items center

  .form__text
    align-self flex-start
    margin 0 0 2rem
    font 2.3rem Arial, sans-serif

  input
    width 100%
    height 3rem
    border 1px solid #B5B5B5
    margin-bottom 1.5rem
    font-family Arial, sans-serif
    text-indent 1.5rem
    background-color #F5F5F5

  .logo
    position absolute
    left -5.6rem
    top 1.8rem
    
  fieldset
    width 100%
    text-align center 
    margin 1rem 0 2rem
    border-top .1rem solid #B5B5B5
    border-bottom .1rem solid #B5B5B5
    padding 2rem 0

    legend
      width 40%
      margin 0
      font-size 1.3rem
      border none

    button:nth-child(2)
      margin-right: 1%

  .play-button
    height 2.75rem
    line-height 2.75rem
    background-color btn-color
    border none
    width 49.5%
    color white

    &:hover
      cursor pointer
      background-color btn-hover

  .submit-button
    height 3.4rem
    border none
    width 100%
    color white
    background-color btn-color

    &:hover
      background-color btn-hover
      transition: .3s
    
