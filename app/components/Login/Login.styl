button-color = #636363
cell-color-odd = #61858f
default-background-color = #e2e2e2


.form__login
  height 100vh
  display flex
  justify-content center
  align-items center

  form 
    width 50%

.form__wrap
  background-color whitesmoke
  padding 3rem 4.5rem

  .form__body
    display flex
    flex-direction column
    align-items center

  .form__text
    margin 0 0 1.7rem
    font bold 1.7rem Arial, sans-serif

  input
    border-style none
    box-shadow none
    width 96%
    border 1px solid #B5B5B5
    margin-bottom 1.5rem
    font-family Arial, sans-serif
    text-indent 1.5rem
    background-color aliceblue

  img
    position absolute
    margin-left -125px
    
  fieldset
    width 100%
    text-align center 
    margin 1rem 0 2rem
    border-top .1rem solid #B5B5B5
    border-bottom .1rem solid #B5B5B5
    padding 2rem 0
    button:first-child
      margin-right: 4%

  .play-button
    height 2.75rem
    line-height 2.75rem
    background-color #636363
    border none
    width 48%
    color white
    &:hover
      cursor pointer
      background-color #81bcde

  .sub__btn
    width 100%
    text-align center

    .submit-button
      height 2.75rem
      line-height 2.75rem
      border none
      width 90%
      &:hover
        background-color #7D7D7D
        color white
        transition: .3s
    
