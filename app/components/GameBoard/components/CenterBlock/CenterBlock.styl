.game_panel
  width 650px
  height 350px
  display inline-flex
  .game_panel-left
    width 350px
    display flex
    flex-direction column
    padding 3rem 0rem
    align-items center
    border-right solid 1px #7D7D7D
    .extended__logo
      width 300px
      height auto
    .controls_button:nth-child(2n)
      margin 0 2rem
    .controls_button
      width 14rem
      height 3rem
      background-color white
      border none
      border-radius 0.3rem
      font-weight bold
      margin-left 2rem
      &:hover
        background-color #929FAA
    .buttons_box
      padding-top 4rem

    .players_field
      display flex
      flex-flow row wrap
      justify-content space-between
      padding-top 2rem
      .player
        display flex
        border 2px solid #435D79
        line-height 3.5rem
        margin .5rem 0
        width 155px
        &_output
          width 16rem
          height 3.5rem
          padding-left 1rem
        &_btn
          text-align center
          width 4rem
          background-color red
          border-left: 2px solid #435D79
          cursor pointer
