.wrapper
  width 100%
  height 100%
  max-width 1920px
  min-width 1024px
  position relative
.gameboard
  width 950px
  height 100%
  margin auto
  margin-top 4%
  .top
    display flex
    flex-direction row
    padding top 5px
  .right
    display flex
    flex-direction column
